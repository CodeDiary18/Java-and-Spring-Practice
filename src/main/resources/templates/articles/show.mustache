{{>layouts/header}}
<!-- jumbotron -->
<div class="jumbotron">
    <h1>Article 상세보기</h1>
    <hr>
    <p>articles/show.mustache</p>
</div>
<!-- table -->
<table class="table table-hover">
    <tbody>
    {{#article}}
        <tr>
            <th>글번호</th>
            <td>{{id}}</td>
        </tr>
        <tr>
            <th>제목</th>
            <td>{{title}}</td>
        </tr>
        <tr>
            <th>내용</th>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
    <!-- 수정 버튼 추가 -->
    <tfoot>
    <tr>
        <th></th>
        <td><a class="btn btn-info" href="/articles/edit/{{id}}">수정</a></td>
    </tr>
    </tfoot>
</table>
<a href="/articles" class="btn btn-success btn-block">목록으로</a>
{{>layouts/footer}}